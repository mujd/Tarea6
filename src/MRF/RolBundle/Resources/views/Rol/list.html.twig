{% extends 'layout.html.twig' %} 

{% block seccion2 %}
    <h1 class="titulo-blog">Roles</h1>

{% endblock %}

{% block seccion3 %}
    <link rel="stylesheet" href="{{ asset('public/css/style.css') }}"/>

    <h2>Listado de Roles</h2><hr>

    <a href="{{ path('mrf_rol_add') }}" class="btn btn-info" role="button">Agregar Rol</a><br><br>
    <div class="row table-responsive ">
        {% for message in app.session.flashbag().get('mensaje') %}
            <div class="alert alert-success">{{ message }}</div>
        {% endfor %}
        <table id="example" class="table table-bordered table-condensed table-hover display" >
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nombres</th>
                    <th>Listar</th>
                    <th>Agregar</th>
                    <th>Editar</th>
                    <th>Eliminar</th>
                    <th>Acciones</th>                
                </tr>
            </thead>
            <tbody>
                {% for Rol in rol %}
                    <tr>
                        <td>{{ Rol.id }}</td>
                        <td>{{ Rol.nombre }}</td>
                        <td>{{ Rol.listar }}</td>
                        <td>{{ Rol.agregar }}</td>
                        <td>{{ Rol.editar }}</td>
                        <td>{{ Rol.eliminar }}</td>
                        <td>
                            <a class="glyphicon glyphicon-pencil" href="{{ path('mrf_rol_edit', {id: Rol.id}) }}"></a>
                            <a class="glyphicon glyphicon-trash edel" href="{{ path('mrf_rol_delete', {id: Rol.id}) }}"></a>                            
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}